            <type>FlowAction</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Opportunity.RecordTypeId</field>
            <operation>equals</operation>
            <value>Add-On Business</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.StageName</field>
