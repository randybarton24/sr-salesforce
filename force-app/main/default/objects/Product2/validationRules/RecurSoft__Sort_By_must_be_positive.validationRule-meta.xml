<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RecurSoft__Sort_By_must_be_positive</fullName>
    <active>true</active>
    <errorConditionFormula>IF(
    $Setup.RecurSoft__Deactivate_ISB_validations__c.RecurSoft__Is_active__c, false, 
    RecurSoft__Sort_By__c &lt;= 0
)</errorConditionFormula>
    <errorDisplayField>RecurSoft__Sort_By__c</errorDisplayField>
    <errorMessage>Sort By must be greater than zero.</errorMessage>
</ValidationRule>
